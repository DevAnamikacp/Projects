                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-user-circle"></i>
                                <p>
                                    User
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="CountryMaster" class="nav-link">
                                        <i class="far fa-user nav-icon"></i>
                                        <p>Country Master</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="StateMaster" class="nav-link">
                                        <i class="far fa-user nav-icon"></i>
                                        <p>State  Master</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="ViewUser" class="nav-link">
                                        <i class="far fa-user nav-icon"></i>
                                        <p>DIstrict Master</p>
                                    </a>
                                </li>
                            </ul>
                        </li>*@
                        @if (contxt.HttpContext.Session.GetInt32("Id") == 1)
                        {
                            <li class="nav-item menu-open">

                                <a asp-controller="Home" asp-action="HomePage" class="nav-link">
                                    <i class="far fa-user nav-icon"></i>
                                    <p>Home Page</p>
                                </a>
                              
                            </li>
                        }
                        @if (contxt.HttpContext.Session.GetInt32("Id") == 1)
                        {
                            <li class="nav-item menu-open">
                               
                                <a asp-controller="Home" asp-action="CountryMaster" class="nav-link">
                                    <i class="far fa-user nav-icon"></i>
                                    <p>Country Master</p>
                                </a>
                              
                            </li>
                        }
                         @if (contxt.HttpContext.Session.GetInt32("Id") == 1)
                        {
                            <li class="nav-item menu-open">
                                <a asp-controller="Home" asp-action="StateMaster" class="nav-link">
                                    <i class="far fa-user nav-icon"></i>
                                    <p>State  Master</p>
                                </a>
                            </li>
                        }
                         @if (contxt.HttpContext.Session.GetInt32("Id") == 1)
                        {
                            <li class="nav-item menu-open">
                                <a asp-controller="Home" asp-action="DistrictMaster" class="nav-link">
                                    <i class="far fa-user nav-icon"></i>
                                    <p>District  Master</p>
                                </a>
                            </li>
                        }
                         @if (contxt.HttpContext.Session.GetInt32("Id") == 1)
                        {
                            <li class="nav-item menu-open">
                                <a asp-controller="Home" asp-action="CityMaster" class="nav-link">
                                    <i class="far fa-user nav-icon"></i>
                                    <p>City Master</p>
                                </a>
                            </li>
                        }
                          @if (contxt.HttpContext.Session.GetInt32("Id") == 2)
                        {
                           <li class="nav-item menu-open">
                                <a asp-controller="Home" asp-action="UserProfile" class="nav-link">
                                    <i class="far fa-user nav-icon"></i>
                                    <p>Sign_up</p>
                                </a>
                            </li>
                        }
                        @if (contxt.HttpContext.Session.GetInt32("Id") != 1)
                        {
                            <li class="nav-item menu-open">
                                <a asp-controller="Home" asp-action="LastDonated" class="nav-link">
                                    <i class="far fa-user nav-icon"></i>
                                    <p>Last Donated</p>
                                </a>
                            </li>
                        }
                        @if (contxt.HttpContext.Session.GetInt32("Id") != 1)
                        {
                            <li class="nav-item menu-open">
                                <a asp-controller="Home" asp-action="SearchDonner" class="nav-link">
                                    <i class="far fa-user nav-icon"></i>
                                    <p>Search Donners</p>
                                </a>
                            </li>
                        }          
                        @if (contxt.HttpContext.Session.GetInt32("Id") != 1)
                        {
                            <li class="nav-item menu-open">
                                <a asp-controller="Home" asp-action="DonnateHistory" class="nav-link">
                                    <i class="far fa-user nav-icon"></i>
                                    <p>Donnate History</p>
                                </a>
                            </li>
                        }        
                        @if (contxt.HttpContext.Session.GetInt32("Id") != 1)
                        {
                            <li class="nav-item menu-open">
                                <a asp-controller="Home" asp-action="StatusBar" class="nav-link">
                                    <i class="far fa-user nav-icon"></i>
                                    <p>Status Bar</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
            <!-- /.sidebar -->
        </aside>

        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                        </div><!-- /.col -->
                        <div class="col-sm-12">
                            <ol class="breadcrumb float-left">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item active">Dashboard</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
           
        </footer>

        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
